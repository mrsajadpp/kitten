<style>
    a {
        color: #6fbf7e !important;
    }

    .loginForm {
        width: 100vw;
        height: 100vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

    .loginForm .bannerArea {
        width: 100%;
        height: auto;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .loginForm .bannerArea img {
        width: 150px;
    }

    .loginForm .inputs {
        width: 100%;
        height: auto;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

    .loginForm .inputs form {
        width: 100%;
        height: auto;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

    .loginForm .inputs .input {
        width: 80%;
        height: 50px;
        margin-top: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        border: none;
        border-bottom: 2px solid rgb(58, 59, 60);
    }

    .loginForm .inputs .input input {
        border: none;
        background-color: transparent;
        width: 100%;
        height: 100%;
        outline: none;
        color: rgb(58, 59, 60);
    }

    .loginForm .inputs .loginbtn {
        width: 80%;
        height: 50px;
        margin-top: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        border: none;
    }

    .loginForm .inputs .loginbtn button {
        width: 100%;
        height: 100%;
        background-color: #6fbf7e;
        border: none;
        border-radius: 85px;
    }

    .loginForm .inputs .textarea {
        display: flex;
        align-items: center;
        justify-content: center;
        color: #ffff;
        height: 100px;
    }
</style>
<div class="loginForm">
    <div class="bannerArea">
        <img src="/img/KITTEN.png" alt="">
    </div>
    <div class="inputs">
        <form action="/login" method="post">
            <div class="input">
                <input type="text" id="username" placeholder="Username" required autocomplete="off">
            </div>
            <div class="input">
                <input type="password" id="password" placeholder="Password" required autocomplete="off">
            </div>
            <div class="loginbtn">
                <button>LogIn</button>
            </div>
            <div class="textarea">
                <span>Don't have an account? , <a href="/signup">SignUp</a>.</span>
            </div>
        </form>
    </div>
</div>